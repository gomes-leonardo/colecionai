{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/shared/infra/http/server.ts",
    "build": "tsc && npx prisma generate",
    "start:prod": "npx prisma migrate deploy && node dist/shared/infra/http/server.js",
    "test": "npm run services:up && npm run services:wait && npm run prisma:generate && jest --runInBand --verbose",
    "worker": "ts-node-dev --respawn --transpile-only src/job/worker.ts",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f docker-compose.yaml up -d",
    "services:down": "docker compose -f docker-compose.yaml down",
    "services:stop": "docker compose -f docker-compose.yaml stop",
    "services:wait": "wait-on tcp:5432",
    "prisma:generate": "npx prisma generate"
  },
